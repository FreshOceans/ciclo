<h1 class="header">Registration Form</h1>
  <div class="form-wrapper">
      <div class="form-area">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>
        <div class="form-div">
          <div class="reg-grp">
            <%= f.label :fname, "*First Name:", class: "reg-label" %>
            <%= f.text_field :fname, id: "firstname", class: "reg-input", autofocus: true %>
          </div>
          <div class="reg-grp">
            <%= f.label :lname, "*Last Name:", class: "reg-label" %>
            <%= f.text_field :lname, id: "lastname", class: "reg-input", autofocus: true %>
          </div>
          <div class="reg-grp">
            <%= f.label :username, "*Username:", class: "reg-label" %>
            <%= f.text_field :username, id: "username", class: "reg-input", autofocus: true %>
          </div>
          <div class="reg-grp">
            <%= f.label :email, "*Email:", class: "reg-label" %><br>
            <%= f.email_field :email, id: "email", class: "reg-input", autofocus: true %>
          </div>
          <div class="reg-grp">
            <%= f.label :password, "*Password:", class: "reg-label" %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> char. min.)</em>
            <% end %>
            <%= f.password_field :password, id: "password", class: "reg-input", autocomplete: "off" %>
          </div>
          <div class="reg-grp">
            <%= f.label :password_confirmation, "*Confirm Password:", class: "reg-label" %>
            <%= f.password_field :password_confirmation, id: "password_confirmation", class: "reg-input", autocomplete: "off" %>
          </div>
        </div>
      <div class="form-div">
        <%= f.submit "Register", class: "register-btn" %>
      </div>
      <% end %>
      <div class="form-div">
        <%= link_to "Cancel", "/", class: "cancel-btn" %>
      </div>
    </div>
  </div>
