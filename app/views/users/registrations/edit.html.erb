<h1 class="header">Edit <%= resource_name.to_s.humanize %></h1>
  <div class="form-wrapper">
      <div class="form-area">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>
        <div class="form-div">
          <div class="reg-grp">
            <%= f.label :fname, "First Name:", class: "reg-label" %>
            <%= f.text_field :fname, autofocus: true, class: "reg-input" %>
          </div>
          <div class="reg-grp">
            <%= f.label :lname, "Last Name:", class: "reg-label" %>
            <%= f.text_field :lname, autofocus: true, class: "reg-input" %>
          </div>
          <div class="reg-grp">
            <%= f.label :username, "Username:", class: "reg-label" %>
            <%= f.text_field :username, autofocus: true, class: "reg-input" %>
          </div>
          <div class="reg-grp">
            <%= f.label :email, "Email:", class: "reg-label" %><br>
            <%= f.email_field :email, autofocus: true, class: "reg-input" %>
          </div>
          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %>
          <% end %>
          <div class="reg-grp">
            <%= f.label :current_password, class: "reg-label" %> <br>
            <i>(Enter to confirm changes)</i><br>
            <%= f.password_field :current_password, autocomplete: "off", class: "reg-input" %>
          </div>
          <div class="reg-grp">
            <%= f.label :password, "New Password:", class: "reg-label" %><br><i>(Enter only to change password)</i><br>
            <%= f.password_field :password, autocomplete: "off", class: "reg-input" %>
            <% if @minimum_password_length %>
              <br />
              <em><%= @minimum_password_length %> characters minimum</em>
            <% end %>
          </div>
          <div class="reg-grp">
            <%= f.label :password_confirmation, "Confirm Password:", class: "reg-label"%>
            <%= f.password_field :password_confirmation, autocomplete: "off", class: "reg-input" %>
          </div>
        </div>
      <div class="form-div">
        <%= f.submit "Update", class: "register-btn" %>
      </div>
      <% end %>
      <div class="form-div">
        <%= link_to "Cancel", "/", class: "cancel-btn" %>
      </div>
      <div class="form-div">
        <%= button_to "Delete", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "cancel-btn" %>
    </div>
    </div>
  </div>
