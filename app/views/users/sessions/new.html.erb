<div class="form-wrapper">
  <div class="form-area">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-div form-grp-div-lg">
      <div class="input-group">
        <%= f.label :username, "Username", class: "form-label" %>
        <%= f.text_field :username, id: "username", class: "form-input", autofocus: true %>
      </div>
      <div class="input-group">
        <%= f.label :password, class: "form-label" %>
        <%= f.password_field :password, id: "password", class: "form-input", autocomplete: "off" %>
      </div>
    </div>
    <div class="form-div form-grp-div-sm">
      <% if devise_mapping.rememberable? -%>
      <%= f.check_box :remember_me, class: "checkbox" %>
      <%= f.label :remember_me, class: "checkbox-label" %>
      <% end -%>
    </div>
    <div class="form-div form-grp-div-md">
      <%= f.submit "Sign In", class: "cancel-btn" %>
    </div>
    <div class="form-div form-grp-div-sm">
      <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
      <%= link_to "Need an Account?", new_registration_path(resource_name), class: "register-option" %>
      <% end -%>
      <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
        <%= link_to "Forgot Password?", new_password_path(resource_name), class: "forgot-pass-option" %>
      <% end -%>
    </div>
    <% end %>
  </div>
</div>
